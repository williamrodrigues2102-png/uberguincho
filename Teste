            <i class="fas fa-truck nav-icon"></i>
            <span>Cadastrar</span>
        </a>
        <a href="#" class="nav-item" onclick="goToStep(5); event.preventDefault();">
            <i class="fas fa-lock nav-icon"></i>
            <span>Admin</span>
