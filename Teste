    <script>
        if (!localStorage.getItem('providers')) {
            localStorage.setItem('providers', JSON.stringify([]));
        }

        let currentStep = 1;

        function goToStep(step) {
            document.querySelectorAll('.step').forEach(el => el.classList.remove('active'));
            document.getElementById(`step${step}`).classList.add('active');
            currentStep = step;
            
            document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
            if (step === 1) document.querySelectorAll('.nav-item')[0].classList.add('active');
            else if (step === 4) document.querySelectorAll('.nav-item')[1].classList.add('active');
            else if (step === 5 || step === 6) document.querySelectorAll('.nav-item')[2].classList.add('active');
            
            if (step === 6) loadAdminDashboard();
        }

        function closeEnRouteModal() {
            document.getElementById('enRouteModal').classList.add('hidden');
        }

        function confirmRequest() {
            const vehicleModel = document.getElementById('vehicleModel').value;
            const pickupLocation = document.getElementById('pickupLocation').value;
            const dropoffLocation = document.getElementById('dropoffLocation').value;
            
            if (!vehicleModel || !pickupLocation || !dropoffLocation) {
                alert('Preencha todos os campos obrigatórios!');
                return;
            }
            
            document.getElementById('displayModel').textContent = vehicleModel;
            document.getElementById('displayPlate').textContent = document.getElementById('vehiclePlate').value || 'Não informado';
            
            goToStep(3);
            
            setTimeout(() => {
                document.getElementById('enRouteModal').classList.remove('hidden');
            }, 300);
        }

        function registerProvider() {
            const providerCompanyName = document.getElementById('providerCompanyName').value;
            const providerCnpj = document.getElementById('providerCnpj').value;
            const providerName = document.getElementById('providerName').value;
            const providerPhone = document.getElementById('providerPhone').value;
            
            if (!providerName || !providerPhone) {
                alert('Preencha os campos obrigatórios!');
                return;
            }
            
            const providers = JSON.parse(localStorage.getItem('providers')) || [];
            const newProvider = {
                id: Date.now().toString(),
                companyName: providerCompanyName,
                cnpj: providerCnpj,
                name: providerName,
                phone: providerPhone,
                status: 'pending'
            };
            providers.push(newProvider);
            localStorage.setItem('providers', JSON.stringify(providers));
            
            alert('Cadastro realizado! Aguardando aprovação.');
            goToStep(1);
        }

        function loginAdmin() {
            const password = document.getElementById('adminPassword').value;
            if (password === 'admin123') {
                goToStep(6);
                document.getElementById('adminPassword').value = '';
            } else {
                alert('Senha incorreta!');
            }
        }

        function logoutAdmin() {
            goToStep(1);
        }

        function loadAdminDashboard() {
            const providers = JSON.parse(localStorage.getItem('providers')) || [];
            document.getElementById('totalProviders').textContent = providers.length;
            document.getElementById('approvedProviders').textContent = providers.filter(p => p.status === 'approved').length;
            
            const providersList = document.getElementById('providersList');
            if (providers.length === 0) {
                providersList.innerHTML = '<p class="text-gray-500 text-center">Nenhum guincho cadastrado.</p>';
                return;
            }
            
            let html = '';
            providers.forEach(provider => {
                html += `
                    <div class="bg-gray-50 p-3 rounded-lg">
                        <h3 class="font-semibold text-gray-900">${provider.companyName || provider.name}</h3>
                        <p class="text-sm text-gray-600">${provider.name} - ${provider.phone}</p>
                        <span class="inline-block px-2 py-1 text-xs rounded-full ${
                            provider.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800'
                        }">${provider.status === 'pending' ? 'Pendente' : 'Aprovado'}</span>
                    </div>
                `;
            });
            providersList.innerHTML = html;
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('vehicleModel').value = 'Gol';
            document.getElementById('vehiclePlate').value = 'ABC1234';
            document.getElementById('pickupLocation').value = 'Av. Paulista, 1000';
            document.getElementById('dropoffLocation').value = 'Oficina Central, Rua Augusta, 1500';
        });
    </script>
</body>
</html>
